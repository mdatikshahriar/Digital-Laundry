<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/shada"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/login_uporer_chobi"
        android:layout_width="120dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:src="@drawable/uporer_chobi" />

    <EditText
        android:id="@+id/login_mail"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/login_uporer_chobi"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/edit_text_bg"
        android:drawableLeft="@drawable/launcher_email"
        android:ems="10"
        android:hint="E-mail"
        android:inputType="textEmailAddress"
        android:padding="10dp" />

    <EditText
        android:id="@+id/login_pass"
        android:layout_width="345dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_mail"
        android:layout_alignStart="@+id/login_mail"
        android:layout_alignEnd="@+id/login_mail"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="-1dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/edit_text_bg"
        android:drawableLeft="@drawable/launcher_password"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="10dp" />

    <Button
        android:id="@+id/login_button"
        android:layout_width="262dp"
        android:layout_height="50dp"
        android:layout_below="@+id/login_pass"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rounded_corners"
        android:text="Log In "
        android:textColor="@color/shada"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/login_edit_text"
        android:layout_width="357dp"
        android:layout_height="64dp"
        android:layout_below="@+id/login_button"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="-4dp"
        android:text="Don't have an account? Register Here!"
        android:textSize="20dp" />


    <Button
        android:id="@+id/login_google_button"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_edit_text"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="23dp"
        android:background="@drawable/rounded_tomato"
        android:drawableLeft="@drawable/google_circle"
        android:elevation="10dp"
        android:padding="12dp"
        android:text="Login with Google"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/shada"
        android:textSize="22dp"
        android:textStyle="bold" />




</RelativeLayout>

